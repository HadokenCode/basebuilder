SOURCE_DIR=/var/lib/tsuru
source ${SOURCE_DIR}/base/deploy
source ${SOURCE_DIR}/config

# Dependencies
if [ -f ${CURRENT_DIR}/mix.exs ]; then
    pushd $CURRENT_DIR
    yes | mix local.rebar
    yes | mix local.hex
    mix deps.get
    mix deps.compile
    popd
fi
